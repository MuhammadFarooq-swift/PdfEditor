{
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,

    // ðŸ‘‡ Add these lines
    "types": ["node", "classnames"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  }
}
